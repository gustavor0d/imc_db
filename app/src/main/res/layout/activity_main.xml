<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fundo2"
    android:gravity="center">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:shapeAppearanceOverlay="@style/RoundedImage"
        android:src="@drawable/logo" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fundo3"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <Button
                android:id="@+id/btnIMC"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:backgroundTint="@color/fundo_botao"
                android:text="@string/calculadora"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btnTitulos"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/titulos"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/fundo_botao" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>